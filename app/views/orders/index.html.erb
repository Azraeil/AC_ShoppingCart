<table class="table table-striped table-hover text-center mt-2">
  <thead>
    <tr>
      <th scope="col-md-auto">Order Number</th>
      <th scope="col">Amount</th>
      <th scope="col">Created at</th>
      <th scope="col">Payment Status</th>
      <th scope="col">Shipping Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th class="align-middle">#<%= order.sn %></th>
        <td class="align-middle">$<%= order.amount %></td>
        <td class="align-middle"><%= order.created_at.strftime("%Y-%m-%d, %H:%M") %></td>
        <td class="align-middle"><%= order.payment_status %></td>
        <td class="align-middle"><%= order.shipping_status %></td>
        <td><%= link_to "View Order", order_path(order.id), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
