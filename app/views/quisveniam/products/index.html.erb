<div class="container">
  <%= render partial: "quisveniam/shared/admin_nav_tabs" %>
  <br>

  <div class="btn btn-primary btn-sm">
    Add New Product
  </div>

  <table class="table table-striped table-hover mt-2">
    <thead>
      <tr>
        <th scope="col">Product Name</th>
        <th scope="col-md-auto">Image</th>
        <th scope="col">Price</th>
        <th scope="col">Option</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th><%= product.name %></th>
          <td>
          <%= image_tag product.image, size: "60" %></td>
          <td>$<%= product.price %></td>
          <td><%= fa_icon "edit" %>#dev</td>
          <td><%= fa_icon "trash" %>#dev</td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

</div>
