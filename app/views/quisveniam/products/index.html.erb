<div class="container">
  <%= render partial: "quisveniam/shared/admin_nav_tabs" %>
  <br>

  <%= link_to "Add New Product", new_quisveniam_product_path, class: "btn btn-primary btn-sm" %>

  <table class="table table-striped table-hover mt-2">
    <thead>
      <tr>
        <th scope="col">Product Name</th>
        <th scope="col-md-auto">Image</th>
        <th scope="col">Price</th>
        <th scope="col">Option</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th class="align-middle"><%= product.name %></th>
          <td class="align-middle"><%= image_tag product.image, size: "60" if product.image && product.image != ""%></td>
          <td class="align-middle">$<%= product.price %></td>
          <td class="align-middle">
            <%= link_to edit_quisveniam_product_path(product.id), class: "btn btn-primary" do %>
              <%= fa_icon "edit" %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= link_to quisveniam_product_path(product.id), method: :delete, data:{ confirm: "Are you sure to delete this product #{product.name}?" }, class: "btn btn-danger" do %>
              <%= fa_icon "trash" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination justify-content-center mt-3">
    <%= paginate @products %>
  </div>
</div>
