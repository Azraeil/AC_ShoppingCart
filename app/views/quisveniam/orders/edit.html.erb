<%= form_for [:quisveniam, @order] do |f| %>
  <div class="container">
    <div class="card">
      <div class="card-header">
        #<%= @order.sn %> Order Status
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Payment Status:
          <%= f.select :payment_status, Order::PAYMENT_STATUS %>
        </li>
        <li class="list-group-item">
          <div class="row">
            <div class="col">
              Shipping Status:
              <% if @order.shipping_status == "cancelled" %>
                Cancelled
              <% else %>
                <%= f.select :shipping_status, Order::SHIPPING_STATUS %>
              <% end %>
            </div>
            <div class="col text-right">
              <%= f.submit "Update Order", class: "btn btn-success btn-sm" %>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <br>
    <%= render partial: "shared/order_content" %>
    <br>
    <%= link_to "Back to Order List", quisveniam_orders_path, class: "btn btn-info btn-sm" %>
  </div>
<% end %>
