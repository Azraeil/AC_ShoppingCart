<h5>Cart</h5>
<hr>
<% current_cart.cart_items.each do |cart_item| %>
  <div class="cart-item">
    <div class="card text-left">
      <div class="row">
        <div class="col-3 text-center">
          <%= image_tag cart_item.product.image, size: "100" %>
        </div>
        <div class="col-9">
          <div class="card-body">
            <h5 class="card-title"><%= cart_item.product.name %></h5>
            <p class="card-text">$<%= cart_item.product.price %></p>
            <%= link_to "-", minus_quantity_cart_path(product_id:cart_item.product.id), method: :post, class:"btn btn-light btn-sm" %>
            <span><%= cart_item.quantity %></span>
            <%= link_to "+", plus_quantity_cart_path(product_id:cart_item.product.id), method: :post, class:"btn btn-light btn-sm" %>
          </div>
        </div>
      </div>
    </div>

  </div>
<% end %>
<hr>
<h5>SUBTOTAL $<%= current_cart.subtotal %></h5>

<a href="#" class="btn btn-primary">View Cart</a>
