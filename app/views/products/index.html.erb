<div class="text-center">
  <div class="row">
    <div class="col-9">
      <div class="row">
        <% @products.each do |product| %>
        <div class="card col-3" style="width: 18rem;">
          <%= link_to product_path(product.id), class:"text-dark" do %>
            <%= image_tag product.image, class:"img-fluid rounded mx-auto d-block" if product.image && product.image != "" %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <h6>$<%= product.price %></h6>
              <%= link_to "Add To Cart", add_to_cart_product_path(product.id), method: :post, class:"btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
        <% end %>
      </div>
      <div class="pagination justify-content-center mt-3">
        <%= paginate @products %>
      </div>
    </div>

    <div class="col-3">
      <%= render partial: "shared/cart" %>
    </div>
  </div>
  <div class="row">

  </div>
</div>
