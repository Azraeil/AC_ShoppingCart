<div class="text-center">
  <div class="row">
    <div class="col-9">
      <div class="row">
        <% @products.each do |product| %>
        <div class="card col-3" style="width: 18rem;">
          <%= image_tag product.image, class:"img-fluid rounded mx-auto d-block" if product.image && product.image != "" %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <h6>$<%= product.price %></h6>
            <a href="#" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
        <% end %>
      </div>
      <div class="pagination justify-content-center mt-3">
        <%= paginate @products %>
      </div>
    </div>

    <div class="col-3">
      <h5>Cart</h5>
      <hr>

      <hr>
      <h5>SUBTOTAL     $</h5>

      <a href="#" class="btn btn-primary">View Cart</a>
    </div>
  </div>
  <div class="row">

  </div>
</div>
