<div class="mt-5">
  <div class="row">
    <div class="col-9">
      <div class="row">
        <div class="col-4">
          <%= image_tag @product.image, class:"img-fluid rounded mx-auto d-block" %>
        </div>
        <div class="col-8">
          <h5><%= @product.name %></h5>
          <h6>$<%= @product.price %></h6>
          <%= simple_format @product.description %>

          <div class="align-bottom">
            <a href="#" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3">
      <%= render partial: "shared/cart" %>
    </div>
  </div>

</div>
